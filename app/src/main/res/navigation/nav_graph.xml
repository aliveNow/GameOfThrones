<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ru.skillbranch.gameofthrones.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/actionFromSplashFragmentToMainFragment"
            app:destination="@id/mainFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="ru.skillbranch.gameofthrones.ui.main.MainFragment"
        tools:layout="@layout/fragment_main">

        <argument
            android:name="splashImageId"
            app:argType="integer" />

        <action
            android:id="@+id/actionFromCharactersListFragmentToDetailFragment"
            app:destination="@id/characterFragment" />

    </fragment>

    <fragment
        android:id="@+id/characterFragment"
        android:name="ru.skillbranch.gameofthrones.ui.characters.details.CharacterFragment"
        tools:layout="@layout/fragment_character">

        <argument
            android:name="shortHouseName"
            app:argType="string" />

        <argument
            android:name="characterId"
            app:argType="string" />

    </fragment>

</navigation>