<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:editTextColor">@color/color_white</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_gray_light</item>
        <item name="android:textColorTertiary">@color/color_gray_light</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="toolbarStyle">@style/App.ToolbarStyle</item>
        <item name="searchViewStyle">@style/App.SearchViewStyle</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/spash</item>
    </style>

    <style name="App.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24dp</item>
    </style>

    <style name="App.SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="AppTheme.Stark">
        <item name="colorPrimary">@color/stark_primary</item>
        <item name="colorPrimaryDark">@color/stark_dark</item>
        <item name="colorAccent">@color/stark_accent</item>
        <item name="colorButtonNormal">@color/stark_primary</item>
    </style>

    <style name="AppTheme.Martel">
        <item name="colorPrimary">@color/martel_primary</item>
        <item name="colorPrimaryDark">@color/martel_dark</item>
        <item name="colorAccent">@color/martel_accent</item>
        <item name="colorButtonNormal">@color/martel_primary</item>
    </style>

    <style name="AppTheme.Tyrel">
        <item name="colorPrimary">@color/tyrel_primary</item>
        <item name="colorPrimaryDark">@color/tyrel_dark</item>
        <item name="colorAccent">@color/tyrel_accent</item>
        <item name="colorButtonNormal">@color/tyrel_primary</item>
    </style>

    <style name="AppTheme.Targaryen">
        <item name="colorPrimary">@color/targaryen_primary</item>
        <item name="colorPrimaryDark">@color/targaryen_dark</item>
        <item name="colorAccent">@color/targaryen_accent</item>
        <item name="colorButtonNormal">@color/targaryen_primary</item>
    </style>

    <style name="AppTheme.Lannister">
        <item name="colorPrimary">@color/lannister_primary</item>
        <item name="colorPrimaryDark">@color/lannister_dark</item>
        <item name="colorAccent">@color/lannister_accent</item>
        <item name="colorButtonNormal">@color/lannister_primary</item>
    </style>

    <style name="AppTheme.Baratheon">
        <item name="colorPrimary">@color/baratheon_primary</item>
        <item name="colorPrimaryDark">@color/baratheon_dark</item>
        <item name="colorAccent">@color/baratheon_accent</item>
        <item name="colorButtonNormal">@color/baratheon_primary</item>
    </style>

    <style name="AppTheme.Greyjoy">
        <item name="colorPrimary">@color/greyjoy_primary</item>
        <item name="colorPrimaryDark">@color/greyjoy_dark</item>
        <item name="colorAccent">@color/greyjoy_accent</item>
        <item name="colorButtonNormal">@color/greyjoy_primary</item>
    </style>

</resources>